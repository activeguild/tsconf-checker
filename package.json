{
    "name": "tsconf-checker",
    "description": "Validate the tsconfig.json file used in the typescript file and display a warning.",
    "version": "1.0.1",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "test": "jest --coverage",
        "prettier": "prettier --write ./",
        "cli": "node --require esbuild-register ./src/cli.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/activeguild/tsconf-checker.git"
    },
    "keywords": [
        "typescript",
        "checker",
        "check",
        "validate"
    ],
    "author": "j1ngzoue",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/activeguild/tsconf-checker/issues"
    },
    "homepage": "https://github.com/activeguild/tsconf-checker#readme",
    "bin": {
        "tsconf-checker": "dist/cli.js"
    },
    "devDependencies": {
        "@swc/core": "^1.2.106",
        "@swc/jest": "^0.2.5",
        "@types/jest": "^27.0.2",
        "@typescript-eslint/eslint-plugin": "^5.2.0",
        "@typescript-eslint/parser": "^5.2.0",
        "esbuild": "^0.13.12",
        "esbuild-register": "^3.0.0",
        "eslint": "^8.1.0",
        "jest": "^27.3.1",
        "prettier": "^2.4.1",
        "regenerator-runtime": "^0.13.9"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "commander": "^8.3.0",
        "tsconfck": "^1.1.0",
        "typescript": "^4.4.4"
    }
}
